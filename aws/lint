#!/bin/bash

ROOT_DIR="$(dirname "$(readlink -f "$0")")"
TFLINT_CONFIG_PATH="$ROOT_DIR/.tflint.hcl"

find modules environments \
  -type f \
  \( -name '*.tf' -o -name '*.tfvars' \) \
  ! -path '*/.terraform/*' \
  -exec dirname {} \; \
  | sort -u \
  | xargs -I {} sh -c '
      cp "$2" "$1/.tflint.hcl"
      cd "$1"
      tflint --config "$3"
      terraform fmt -check
      rm .tflint.hcl
      echo "====== $1 processed ======"
    ' sh {} "$TFLINT_CONFIG_PATH" "$TFLINT_CONFIG_PATH"
